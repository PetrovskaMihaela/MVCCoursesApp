@model UniCoursesApp.ViewModels.StudentsCoursesEnrollViewModel

@{
    ViewData["Title"] = "EnrollStudents";
}

<h1>Запиши студенти</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <select asp-for="Course" class="form-control" asp-items="Model.CourseList"></select>
            </div>

            <div class="form-group">
                <label class="control-label">Students</label>
                <select asp-for="SelectedStudents" class="form-control js-example-basic-multiple"
                        asp-items="Model.StudentList"> </select>
                <span asp-validation-for="SelectedStudents" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Enrollment.Semester" class="control-label"></label>
                <input asp-for="Enrollment.Semester" class="form-control" />
                <span asp-validation-for="Enrollment.Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.Year" class="control-label"></label>
                <input asp-for="Enrollment.Year" class="form-control" />
                <span asp-validation-for="Enrollment.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Enrollments" asp-action="Index">Назад кон запишани студенти</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

