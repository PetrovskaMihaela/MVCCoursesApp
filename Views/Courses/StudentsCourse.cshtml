@model UniCoursesApp.Models.Course

@{ ViewData["Title"] = "StudentsCourse"; }

<h1>Запишани</h1>


<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Students)
</dt>
<dd class="col-sm-10">
    <table class="table">
        <tr>
            <th>Студент</th>
            <th>Оцена</th>
            <th>Поени</th>
            <th>Проект URL</th>
            <th>Семинарска URL</th>
            <th>Година</th>
            <th>Семестар</th>
            <th>Датум на завршуање</th>
        </tr>
        @foreach (var item in Model.Students)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Student.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExamPoints)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProjectUrl)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SeminalUrl
   )
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Year)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Semester)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FinishDate)
    </td>
    @if (item.FinishDate == null)
    {
<td>
    <a asp-controller="Enrollments" asp-action="TeacherEdit" asp-route-id="@item.Id">Промени</a>
</td>               
        }
</tr>
        }
    </table>
</dd>