@model UniCoursesApp.Models.Course

@{ ViewData["Title"] = "StudentsCourse"; }

<h1>Enrolled Students</h1>


<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Students)
</dt>
<dd class="col-sm-10">
    <table class="table">
        <tr>
            <th>Student</th>
            <th>Grade</th>
            <th>Exam Points</th>
            <th>Project URL</th>
            <th>Seminal URL</th>
            <th>Year</th>
            <th>Semester</th>
            <th>Finish Date</th>
        </tr>
        @foreach (var item in Model.Students)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Student.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExamPoints)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProjectUrl)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SeminalUrl
   )
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Year)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Semester)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FinishDate)
    </td>
    @if (item.FinishDate == null)
    {
<td>
    <a asp-controller="Enrollments" asp-action="TeacherEdit" asp-route-id="@item.Id">Edit</a>
</td>               
        }
</tr>
        }
    </table>
</dd>