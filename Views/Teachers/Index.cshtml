@model UniCoursesApp.ViewModels.TeacherNameDegreeRankViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Професори</h1>

<p>
    <a asp-action="Create">Додади нов</a>
</p>

<form asp-controller="Teachers" asp-action="Index" method="get">
    <p>
        <select asp-for="TeacherDegree" asp-items="Model.DegreeVm">
            <option value="">Степен на образование</option>
        </select>
        <select asp-for="TeacherRank" asp-items="Model.RankVm">
            <option value="">Звање</option>
        </select>
        Име и презиме: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
        <a asp-action="Index">Назад</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeachersVm[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeachersVm[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeachersVm[0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeachersVm[0].AcademicRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeachersVm[0].OfficeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeachersVm[0].HireDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TeachersVm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
