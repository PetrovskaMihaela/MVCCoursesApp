@model UniCoursesApp.Models.Teacher

@{ ViewData["Title"] = "Details";
                var photoPath = "~/images/" + (Model.ProfilePicture ?? "blankImage.png"); }

<h1>Професор - @Html.DisplayFor(model => model.FullName)</h1>

<div>
    <hr />
    <img src="@photoPath"
         height="200" width="200"
         asp-append-version="true" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Degree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Degree)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicRank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicRank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfficeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HireDate)
        </dd>
    </dl>
    <hr />
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courses)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Курс</th>
                    <th>Програма</th>
                    <th>Семестар</th>
                </tr>
                @foreach (var item in Model.Courses)
                {
    <tr>
        <td>
            <a asp-controller="Courses" asp-action="TeacherViewCourse" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Programme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semester)
        </td>
    </tr>
}
            </table>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoursesSecond)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Курс</th>
                    <th>Програма</th>
                    <th>Семестар</th>
                </tr>
                @foreach (var item in Model.CoursesSecond)
                {
    <tr>
        <td>
            <a asp-controller="Courses" asp-action="TeacherViewCourse" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Programme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semester)
        </td>
    </tr>
}
            </table>
        </dd>
    </dl>
</div>
